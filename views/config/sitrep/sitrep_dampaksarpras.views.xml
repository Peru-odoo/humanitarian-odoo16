<odoo>
    <data>
        <record id="humanitarian_dampaksarpras_view_form" model="ir.ui.view">
            <field name="name">humanitarian.sitrep_dampaksarpras.view.form</field>
            <field name="model">humanitarian.sitrep_dampaksarpras</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="dampak_site_id" />
                            <field name="kerusakan" />
                            <field name="jumlah" />
                            <field name="satuan" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="humanitarian_dampaksarpras_view_kanban" model="ir.ui.view">
            <field name="name">humanitarian.sitrep_dampaksarpras.view.kanban</field>
            <field name="model">humanitarian.sitrep_dampaksarpras</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                t-attf-style="border-left: 8px solid; background-color: #ffffff;"
                                class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="oe_kanban_card">
                                        <div class="oe_kanban_content"
                                            style="color: #000; margin-left: 15px;">
                                            <h2>
                                                <field name="kerusakan" />
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="humanitarian_dampaksarpras_view_tree" model="ir.ui.view">
            <field name="name">humanitarian.sitrep_dampaksarpras.view.tree</field>
            <field name="model">humanitarian.sitrep_dampaksarpras</field>
            <field name="arch" type="xml">
                <tree string="Dampak Sarpras Details">
                    <field name="kerusakan" />
                    <field name="jumlah" />
                    <field name="satuan" />
                </tree>
            </field>
        </record>
        <record id="humanitarian_dampaksarpras_action" model="ir.actions.act_window">
            <field name="name">Dampak Sarpras</field>
            <field name="res_model">humanitarian.sitrep_dampaksarpras</field>
            <field name="view_mode">tree,kanban,form,graph,pivot</field>
            <field name="help" type="html">
                <p class="0_view_nocontent_smiling_face">
                    (Error) Data not found!
                </p>
            </field>
        </record>
        <menuitem id="dampaksarpras" name="Dampak SarPras" parent="humanitarian_sitrep"
            action="humanitarian_dampaksarpras_action"
            sequence="1" />
    </data>
</odoo>